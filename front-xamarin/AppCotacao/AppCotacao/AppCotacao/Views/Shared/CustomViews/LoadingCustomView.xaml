<?xml version="1.0" encoding="UTF-8"?>
<AbsoluteLayout xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppCotacao.Views.Shared.CustomViews.LoadingCustomView"
    AbsoluteLayout.LayoutFlags="All"
    AbsoluteLayout.LayoutBounds="0.5,0.5,1,1">

    <ContentView         
        x:Name="activityIndicatorBackground"    
        BackgroundColor="{StaticResource LoadingBackColor}" 
        Opacity="0.5"
        AbsoluteLayout.LayoutFlags="All"
        AbsoluteLayout.LayoutBounds="0,0,1,1" >

    </ContentView>

    <ActivityIndicator
        x:Name="activityIndicator" 
        Color="{StaticResource PrimaryBackColor}"
        AbsoluteLayout.LayoutFlags="All"
        AbsoluteLayout.LayoutBounds="0.5,1,0.15,1"/>

</AbsoluteLayout>
    